extends layout 

block content
    .container 
        form(action="/add" method="post")
            div.form-group
                label(for="name") Name
                input(type="text" ,class="form-control" ,id="name" ,name="name" ,placeholder="Enter Product Name", required)
            br
            div.form-group
                label(for="description") Description
                input(type="text" ,class="form-control" ,id="description" ,name="description" ,placeholder="Describe the Product", required)
            br
            div.form-group
                label(for="price") Price
                input(type="text" ,class="form-control" ,id="price" ,name="price" ,placeholder="Product Price", required)
            br
            div.form-group
                label(for="rating") Ratings
                input(type="number" ,class="form-control" ,id="rating", min=1, max=5 ,name="rating" ,placeholder="Product Ratings" ,required)
            br
            button.btn.btn-primary(type="submit") Add Product
